<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_employee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.off.asithembiso.rands.AddEmployee">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="ID NUmber"
                    android:id="@+id/textView"
                    android:layout_weight="0.60" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtID"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-150dp"
                    android:maxLines="@integer/status_bar_notification_info_maxnum" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"

                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="Name"
                    android:id="@+id/textView2"
                    android:layout_weight="0.60" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-150dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txtName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="Surname"
                    android:id="@+id/textView3"
                    android:layout_weight="0.60" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSurname"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-150dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="Job Title"
                    android:id="@+id/job"
                    android:layout_weight="0.60" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtJob"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-150dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="Rate"
                    android:id="@+id/textView5"
                    android:layout_weight="0.60" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-150dp"
                    android:id="@+id/txtrate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="Hours"
                    android:id="@+id/textView6"
                    android:layout_weight="0.60" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtHours"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-150dp"
                    android:maxLines="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="22dp"
                    android:text="Salary"
                    android:id="@+id/sal"
                    android:layout_weight="0.60" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSalary"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-150dp"
                    android:maxLines="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="calculate"
                    android:id="@+id/btnCalculate"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.38"
                    android:onClick="calculateSalary"
                    android:layout_margin="15dp"
                    android:background="@drawable/button_bg_transparent"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/btnSave"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.38"
                    android:onClick="onBtnSaveClick"
                    android:background="@drawable/button_bg_transparent"/>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/home"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.38"
                android:onClick="home"
                android:background="@drawable/button_bg_transparent"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
